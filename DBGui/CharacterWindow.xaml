<my:WindowBase x:Class="DBGui.CharacterWindow"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:my="clr-namespace:DBGui.Controls">
    <my:WindowBase.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="Margin" Value="5" />
        </Style>
    </my:WindowBase.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <TextBlock FontSize="16" Text="{Binding Character.Name, Mode=OneWay}" />

        <ItemsControl Grid.Row="1"
                      ItemsSource="{Binding Character.AppearsIn, Mode=OneWay}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <ContentControl Content="{Binding Key}"
                                        ContentTemplate="{DynamicResource ProductionInfoTemplate}" />
                        <ListView ItemsSource="{Binding}" 
                                  ItemTemplate="{DynamicResource PersonInfoTemplate}" />
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</my:WindowBase>