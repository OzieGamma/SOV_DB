<my:WindowBase x:Class="DBGui.ProductionWindow"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:models="clr-namespace:DBGui.Models"
               xmlns:my="clr-namespace:DBGui.Controls">
    <my:WindowBase.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="Margin" Value="5" />
        </Style>

        <DataTemplate DataType="{x:Type models:Movie}">
            <TextBlock Text="Movie" />
        </DataTemplate>

        <DataTemplate DataType="{x:Type models:Series}">
            <TextBlock Text="Series" />
        </DataTemplate>

        <DataTemplate DataType="{x:Type models:Episode}">
            <TextBlock Text="Episode" />
        </DataTemplate>

        <DataTemplate DataType="{x:Type models:VideoGame}">
            <TextBlock Text="Video game" />
        </DataTemplate>
    </my:WindowBase.Resources>
    
    <Grid>
        <ContentControl Content="{Binding Production}" />
    </Grid>
</my:WindowBase>