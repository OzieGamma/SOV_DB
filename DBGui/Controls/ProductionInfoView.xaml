<UserControl x:Class="DBGui.Controls.ProductionInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:my="clr-namespace:DBGui.Controls">
    <UserControl.Resources>
        <Style TargetType="ListViewItem">
            <EventSetter Event="MouseDoubleClick" Handler="Item_MouseDoubleClick" />
        </Style>
    </UserControl.Resources>
    <ListView ItemsSource="{Binding Items}"
              my:ScrollToTop.Enabled="True">
        <ListView.ItemTemplate>
            <DataTemplate>
                <TextBlock>
                    <Bold>
                        <Run Text="{Binding Title, Mode=OneTime}" />
                    </Bold>
                    <Italic>
                        <Run Text="{Binding Year, TargetNullValue='', Mode=OneTime}" />
                    </Italic>
                    <Run Text="{Binding Genre, StringFormat='({0})', TargetNullValue='', Mode=OneTime}" />
                </TextBlock>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</UserControl>