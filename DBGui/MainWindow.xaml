<Window x:Class="DBGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="800">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="Margin" Value="5,2" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5,2" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5,2" />
            <Setter Property="Padding" Value="5,0" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Menu IsMainMenu="True">
            <MenuItem Header="_Import..." Click="ImportMenu_Click" />
        </Menu>

        <TabControl Grid.Row="1">
            <TabItem x:Name="PeopleTab"
                     Header="People">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBox x:Name="PeopleSearchBox" />

                    <Button Grid.Column="1"
                            Content="Search by name"
                            Click="PeopleSearchButton_Click" />

                    <ListView x:Name="PeopleView"
                              Grid.ColumnSpan="2"
                              Grid.Row="1">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <Run Text="{Binding FirstName}" />
                                    <Bold>
                                        <Run Text="{Binding LastName}" />
                                    </Bold>
                                </TextBlock>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <StackPanel Grid.ColumnSpan="2"
                                Grid.Row="2"
                                DataContext="{Binding SelectedItem, ElementName=PeopleView}">
                        <TextBlock>
                            <Run Text="{Binding FirstName}" />
                            <Bold>
                                <Run Text="{Binding LastName}" />
                            </Bold>
                            <Run Text="{Binding Gender, TargetNullValue='(unknown gender)', StringFormat='{}({0})'}" />
                            <Italic>
                                <Run Text="{Binding BirthName, StringFormat='(born as {0})'}" />
                            </Italic>
                        </TextBlock>
                        
                        <TextBlock>
                            <Run Text="{Binding BirthDate, TargetNullValue='Unknown birth date.', StringFormat='Born {0:d}.'}" />
                            <Run Text="{Binding DeathDate, StringFormat='Dead {0:d}.'}" />
                        </TextBlock>
                        
                        <TextBlock>
                            <Italic>
                                <Run Text="{Binding Quotes}" />
                            </Italic>
                        </TextBlock>

                        <TextBlock Text="{Binding Trivia}" />

                        <TextBlock Text="{Binding ShortBio}" />
                        
                        <TextBlock Text="{Binding SpouseInfo, StringFormat='Spouse: {0}'}" />

                        <TextBlock>
                            <Run Text="{Binding Height, TargetNullValue='Unknown height.', StringFormat='{}Height: {0} cm'}" />
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem x:Name="RawQueryTab"
                     Header="Raw query">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100" />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <TextBox x:Name="RawQueryBox" 
                             AcceptsReturn="True" />

                    <Button Grid.Column="1"
                            Content="Query"
                            Click="RawQueryButton_Click" />

                    <DataGrid Grid.ColumnSpan="2"
                              Grid.Row="1"
                              x:Name="RawQueryResultsGrid" />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
