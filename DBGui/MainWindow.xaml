<Window x:Class="DBGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <Menu IsMainMenu="True">
            <MenuItem Header="_Import..." Click="ImportMenu_Click" />
        </Menu>
        
        <TabControl Grid.Row="1">
            <TabItem Header="Raw query">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    
                    <TextBox x:Name="RawQueryBox" 
                             AcceptsReturn="True" />
                    
                    <Button Grid.Column="1"
                            Content="Query"
                            Click="RawQueryButton_Click" />
                    
                    <DataGrid Grid.ColumnSpan="2"
                              Grid.Row="1"
                              x:Name="RawQueryResultsGrid" />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
